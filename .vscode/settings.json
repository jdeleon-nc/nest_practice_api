{
    "eslint.nodePath": "./node_modules/eslint",
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.validate": [
        "typescript"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    }
}